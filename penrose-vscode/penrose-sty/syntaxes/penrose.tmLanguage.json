{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Penrose Style",
  "fileTypes": ["sty"],
  "patterns": [
    { "include": "#blocks" },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.penrose",
          "match": "\\b(forall|where|with)\\b"
        },
        {
          "name": "support.function",
          "match": "\\b(ensure|encourage|layer|override|delete)\\b"
        },
        {
          "name": "constant.language.penrose",
          "match": "\\b(LOCAL)\\b"
        },
        {
          "name": "support.type.penrose",
          "match": "\\b(rgba|hsva|vec2|vec3)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.penrose",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.penrose",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.penrose.int.signed",
          "match": "[-+]\\d+"
        },
        {
          "name": "constant.numeric.penrose.float",
          "match": "[-+]?[0-9]*\\.?[0-9]+(E[-+]?[0-9]+)?"
        },
        {
          "name": "constant.numeric.penrose.hole",
          "match": "\\?"
        }
      ]
    },
    "blocks": {
      "name": "meta.structure.block.penrose"
    }
  },
  "scopeName": "source.sty"
}
